                <image src="/image/ask.png" style="width: 20px;height: 20px;margin-right: 5px;padding-top: 5px" />
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>向我提问的</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator> -->
            <!--<navigator url="verify/verify" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="/image/verified.png" style="width: 20px;height: 20px;margin-right: 5px;padding-top: 5px" />
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>成为回答者</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>-->
          </view>
        </view>
      </view>
    </view>
    <view class="weui-panel">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_small-appmsg" style="border-top:1rpx solid #e5e5e5;">
          <view class="weui-cells weui-cells_in-small-appmsg">
            <navigator url="feedback/feedback" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="/image/feedback.png" style="width: 20px;height: 20px;margin-right: 5px;padding-top: 5px" />
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>反馈建议</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
            <navigator url="about/about" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
              <view class="weui-cell__hd">
                <image src="/image/about.png" style="width: 20px;height: 20px;margin-right: 5px;padding-top: 5px" />
              </view>
              <view class="weui-cell__bd weui-cell_primary">
                <view>关于壹元知享</view>
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access"></view>
