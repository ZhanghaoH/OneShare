.add_pic {
  padding: 0 40rpx;
  padding-bottom: 20rpx;
  background: #fff;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.add_pic view {
  display: inline-block;
  margin-top: 20rpx;
  width: 400rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background: url(http://bmob-cdn-7744.b0.upaiyun.com/2016/11/23/95953c8b40f0d089800ebec438581cc4.png) no-repeat left center;
  background-size: 160rpx auto;
  padding-left: 80rpx;
  color: #b2b2b2;
}

.image_box {
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 10px 40rpx 10rpx;
}

.add_title, .addConent {
  padding: 8rpx 30rpx;
  color: #646464;
  background: #fff;
}

.add_title {
  border-bottom: 1px solid #eaeaea;
  height: 88rpx;
  font-weight: bold;  
}

.add_label {
  border-bottom: 1px solid #eaeaea;
  height: 88rpx;
}

.addConent textarea {
  width: 100%;
  height: 350rpx;
}

.addConent {
  padding-top: 30rpx;
  height: 350rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

label {
  color: #a0a0a0;
  margin-top: 40rpx;
  padding-left: 40rpx;
  padding-top: 40rpx;
}

label text {
  padding-left: 10rpx;
}

.picPre {
  width: 50%;
  margin: 0 auto;
  position: relative;
  box-sizing: border-box;
}

.picPre image {
  width: 100%;
  height: 180rpx;
}

.picPre view {
  position: absolute;
  right: 0px;
  top: -20rpx;
  width: 15px;
  height: 15px;
  background: url(http://bmob-cdn-7744.b0.upaiyun.com/2016/11/23/23e708d8401db28080a47d384712f765.png) no-repeat;
  background-size: cover;
}

.hidden {
  display: none;
}

.picker-cell {
  position: relative;
  padding: 12px 15px;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  background-color: #fff;
  color: #646464;
  border-bottom: 1px solid #eaeaea;
}

.top-panel {
  background-color: #fff;
  position: relative;
  overflow: hidden;
}

.top-panel .hd {
  padding: 14px 15px 10px;
  color: #999;
  font-size: 13px;
  position: relative;
  border-bottom: 1px solid #eaeaea;
}

.weui-panel {
  background-color: #fff;
  margin: 10px 0px;
  position: relative;
  overflow: hidden;
}

button {
  /* width: 400rpx; */
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 16px;
  border: 0 none;
  background: #e74c3c;
  color: #fff;
  margin: 30rpx auto;
}